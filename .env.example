# Database
DATABASE_URL="postgresql://user:password@localhost:5432/qa_web_system"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# JWT
JWT_SECRET="your-jwt-secret-key-here"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Service
# Options: dummy, sendgrid, aws-ses
EMAIL_PROVIDER="dummy"
EMAIL_FROM="noreply@example.com"

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=""

# AWS SES (if EMAIL_PROVIDER=aws-ses)
AWS_REGION=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=""

# Node Environment
NODE_ENV="development"

# Security
# 許可するオリジン（カンマ区切り）
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# レート制限設定（オプション）
RATE_LIMIT_WINDOW="60000" # ミリ秒（デフォルト: 60秒）
RATE_LIMIT_MAX_REQUESTS="100" # リクエスト数（デフォルト: 100）

# ログ設定
LOG_LEVEL="info" # debug, info, warn, error（デフォルト: 本番環境はinfo、開発環境はdebug）

# バックアップ設定
BACKUP_DIR="./backups" # バックアップ保存先ディレクトリ（デフォルト: ./backups）
BACKUP_RETENTION_DAYS="30" # バックアップ保持日数（デフォルト: 30日） 